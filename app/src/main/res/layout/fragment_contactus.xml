<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/contactus_fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30sp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/contactus_btn">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="V-DOC"
                android:background="#E41111"
                android:paddingHorizontal="40sp"
                android:paddingVertical="10sp"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="30sp"
                android:textStyle="bold"
                android:id="@+id/contactus_btntxt1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contactus_btntxt1"
                android:gravity="center"
                android:text="YOUR VEHICLE DOCTOR"
                android:id="@+id/contactus_btntxt2"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20sp"
            android:layout_below="@+id/contactus_btn">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call Us"
                android:textSize="30sp"
                android:textColor="#464545"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(+91) 730-369-0383 \n (+91) 730-329-7283"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="30sp"
                android:layout_marginTop="20sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email US"
                android:textSize="30sp"
                android:textColor="#464545"
                android:layout_marginTop="30sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="info@vdoc.in"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="30sp"
                android:layout_marginTop="20sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WhatsApp Us"
                android:textSize="30sp"
                android:textColor="#464545"
                android:layout_marginTop="30sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(+91) 888-244-3415 \n (+91) 888-242-6027"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="30sp"
                android:layout_marginTop="20sp"/>

        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>